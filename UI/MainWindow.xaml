<Window x:Class="UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="IT-Сервис: Система учета заявок" Height="450" Width="800"
        WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <Style TargetType="Button" x:Key="MainMenuButton">
            <Setter Property="Width" Value="300"/>
            <Setter Property="Height" Value="60"/>
            <Setter Property="Margin" Value="0,15"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Name="Border" CornerRadius="8" Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background">
                                    <Setter.Value>
                                        <SolidColorBrush Color="{Binding RelativeSource={RelativeSource Self}, Path=Background.Color}">
                                            <SolidColorBrush.RelativeTransform>
                                                <ScaleTransform ScaleY="0.9" ScaleX="0.9"/>
                                            </SolidColorBrush.RelativeTransform>
                                        </SolidColorBrush>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="#34495e" Padding="20">
            <TextBlock Text="Главное меню управления заявками" 
                       FontSize="28" FontWeight="Bold" 
                       HorizontalAlignment="Right" Foreground="White" Margin="0,0,127,0"/>
        </Border>

        <StackPanel Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center">

            <Button Content="📋 Список заявок" 
                    Style="{StaticResource MainMenuButton}" 
                    Background="#808080"
                    Click="BtnListRequests_Click"/>

            <Button Content="Добавить новую заявку" 
                    Style="{StaticResource MainMenuButton}" 
                    Background="#8B00FF" 
                    Click="BtnAddRequest_Click"/>

            <Button Content="📊 Статистика и отчеты" 
                    Style="{StaticResource MainMenuButton}" 
                    Background="#808080" 
                    Click="BtnStatistics_Click"/>

        </StackPanel>


    </Grid>
</Window>