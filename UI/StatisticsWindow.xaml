<Window x:Class="UI.StatisticsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:oxy="http://oxyplot.org/wpf"
        mc:Ignorable="d"
        Title="Статистика по заявкам" Height="700" Width="1000"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Статистика по заявкам"
                   FontSize="24" FontWeight="Bold" Margin="0,0,0,10"/>

        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,15">
            <TextBlock Text="Период с:" VerticalAlignment="Center" Margin="0,0,5,0"/>
            <DatePicker Name="dpStartDate" SelectedDate="{Binding StartDate}" 
                        Width="120" Margin="0,0,15,0"/>
            <TextBlock Text="по:" VerticalAlignment="Center" Margin="0,0,5,0"/>
            <DatePicker Name="dpEndDate" SelectedDate="{Binding EndDate}" 
                        Width="120" Margin="0,0,15,0"/>

            <Button Content="Применить" Width="130" Height="30" Click="ApplyFilterButton_Click"/>
            <Button Content="Сбросить" Width="100" Height="30" Margin="10,0,0,0" Click="ResetFilterButton_Click"/>
        </StackPanel>

        <TabControl Grid.Row="2">
            <TabItem Header="По статусам">
                <oxy:PlotView Model="{Binding StatusPlotModel}" Margin="10"/>
            </TabItem>
            <TabItem Header="По инженерам">
                <oxy:PlotView Model="{Binding EngineerPlotModel}" Margin="10"/>
            </TabItem>
            <TabItem Header="По месяцам">
                <oxy:PlotView Model="{Binding MonthPlotModel}" Margin="10"/>
            </TabItem>
        </TabControl>

        <Button Grid.Row="3" Content="⬅️ Назад в меню" Click="BtnBackToMenu_Click"
                Background="#f39c12" Foreground="White"
                FontWeight="Bold" Padding="10" Margin="0,10,0,0"
                HorizontalAlignment="Left" Width="150"/>
    </Grid>
</Window>