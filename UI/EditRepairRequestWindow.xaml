<Window x:Class="UI.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        mc:Ignorable="d"
        Title="Форма заявки" Height="700" Width="850"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#f4f6f9">

    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="{Binding Title, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Window}}}" 
                   FontSize="24" FontWeight="Bold" Margin="0,0,0,20"
                   Foreground="#2c3e50" HorizontalAlignment="Center"/>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>

                <Grid Margin="0,0,0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="200"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Grid.Resources>
                        <Style TargetType="TextBlock">
                            <Setter Property="Margin" Value="0,10,10,10"/>
                            <Setter Property="VerticalAlignment" Value="Center"/>
                            <Setter Property="FontWeight" Value="SemiBold"/>
                            <Setter Property="Foreground" Value="#34495e"/>
                        </Style>
                        <Style TargetType="Control">
                            <Setter Property="Margin" Value="10,5"/>
                            <Setter Property="Height" Value="35"/>
                            <Setter Property="Padding" Value="8"/>
                            <Setter Property="VerticalContentAlignment" Value="Center"/>
                            <Setter Property="BorderBrush" Value="#bdc3c7"/>
                            <Setter Property="BorderThickness" Value="1"/>
                            <Setter Property="Background" Value="White"/>
                        </Style>
                        <Style TargetType="ComboBox" BasedOn="{StaticResource {x:Type Control}}"/>
                        <Style TargetType="DatePicker" BasedOn="{StaticResource {x:Type Control}}"/>
                        <Style TargetType="TextBox" BasedOn="{StaticResource {x:Type Control}}"/>
                    </Grid.Resources>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Номер заявки: *"/>
                    <TextBox Grid.Row="0" Grid.Column="1" Name="txtNumber" ToolTip="Введите номер заявки"/>

                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Дата добавления: *"/>
                    <DatePicker Grid.Row="1" Grid.Column="1" Name="dpDateAdded" SelectedDate="{x:Static sys:DateTime.Now}"/>

                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Тип оборудования: *"/>
                    <ComboBox Grid.Row="2" Grid.Column="1" Name="cmbEquipmentType">
                        <ComboBoxItem Content="Компьютер"/>
                        <ComboBoxItem Content="Сервер"/>
                        <ComboBoxItem Content="Принтер"/>
                        <ComboBoxItem Content="МФУ"/>
                        <ComboBoxItem Content="Ноутбук"/>
                        <ComboBoxItem Content="Монитор"/>
                        <ComboBoxItem Content="Сетевое оборудование"/>
                    </ComboBox>

                    <TextBlock Grid.Row="3" Grid.Column="0" Text="Модель оборудования: *"/>
                    <TextBox Grid.Row="3" Grid.Column="1" Name="txtEquipmentModel" ToolTip="Например: HP LaserJet Pro M404dn"/>

                    <TextBlock Grid.Row="4" Grid.Column="0" Text="Описание проблемы: *"/>
                    <TextBox Grid.Row="4" Grid.Column="1" Name="txtProblemDescription" 
                             Height="80" VerticalScrollBarVisibility="Auto" TextWrapping="Wrap"
                             ToolTip="Подробно опишите проблему"/>

                    <TextBlock Grid.Row="5" Grid.Column="0" Text="ФИО клиента: *"/>
                    <TextBox Grid.Row="5" Grid.Column="1" Name="txtClientFullName" ToolTip="Введите полное имя клиента"/>

                    <TextBlock Grid.Row="6" Grid.Column="0" Text="Номер телефона: *"/>
                    <TextBox Grid.Row="6" Grid.Column="1" Name="txtClientPhone" ToolTip="Формат: +7 (XXX) XXX-XX-XX"/>

                    <TextBlock Grid.Row="7" Grid.Column="0" Text="Статус заявки: *"/>
                    <ComboBox Grid.Row="7" Grid.Column="1" Name="cmbStatus">
                        <ComboBoxItem Content="Новая заявка"/>
                        <ComboBoxItem Content="В процессе ремонта"/>
                        <ComboBoxItem Content="Ожидание запчастей"/>
                        <ComboBoxItem Content="Готово к выдаче"/>
                        <ComboBoxItem Content="Завершена"/>
                    </ComboBox>

                    <TextBlock Grid.Row="8" Grid.Column="0" Text="Ответственный инженер:"/>
                    <TextBox Grid.Row="8" Grid.Column="1" Name="txtResponsibleEngineer" ToolTip="ФИО инженера, ответственного за заявку"/>

                    <TextBlock Grid.Row="9" Grid.Column="0" Text="Комментарии инженера:"/>
                    <TextBox Grid.Row="9" Grid.Column="1" Name="txtComments" 
                             Height="80" VerticalScrollBarVisibility="Auto" TextWrapping="Wrap"
                             ToolTip="Комментарии и заметки инженера"/>
                </Grid>

                <TextBlock Text="* - обязательные поля" 
                           FontStyle="Italic" Foreground="#e74c3c" Margin="10,0,0,20"
                           HorizontalAlignment="Left"/>

            </StackPanel>
        </ScrollViewer>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="❌ Отмена" Width="120" Height="40" Margin="0,0,15,0"
                    Background="#e74c3c" Foreground="White" FontWeight="Bold" FontSize="16"
                    Click="BtnCancel_Click" Cursor="Hand">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border CornerRadius="5" Background="{TemplateBinding Background}">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Button.Style>
            </Button>
            <Button Content="💾 Сохранить" Width="120" Height="40" 
                    Background="#27ae60" Foreground="White" FontWeight="Bold" FontSize="16"
                    Click="BtnSave_Click" Cursor="Hand">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border CornerRadius="5" Background="{TemplateBinding Background}">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Button.Style>
            </Button>
        </StackPanel>
    </Grid>
</Window>