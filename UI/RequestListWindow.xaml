<Window x:Class="UI.RequestListWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="IT-Сервис: Список заявок" Height="600" Width="1000"
        WindowStartupLocation="CenterScreen"
        Background="#f4f6f9">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="#34495e" Padding="15">
            <TextBlock Text="Список заявок на ремонт" 
                       FontSize="24" FontWeight="Bold" 
                       Foreground="White" HorizontalAlignment="Center"/>
        </Border>

        <DockPanel Grid.Row="1" Margin="10">

            <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="0,0,0,10">
                <Button Content="✏️ Редактировать" Click="BtnEdit_Click" 
                        Background="#3498db" Foreground="White" 
                        FontWeight="Bold" Padding="10" Margin="0,0,10,0"/>

                <Button Content="🗑️ Удалить" Click="BtnDelete_Click" 
                        Background="#e74c3c" Foreground="White" 
                        FontWeight="Bold" Padding="10" Margin="0,0,10,0"/>
                <Button Content="🔄 Обновить" Click="BtnRefresh_Click" 
                        Background="#808080" Foreground="White" 
                        FontWeight="Bold" Padding="10"/>
            </StackPanel>

            <DataGrid Name="RequestsDataGrid" 
                      AutoGenerateColumns="True" 
                      IsReadOnly="True" 
                      SelectionMode="Single"
                      Background="White"
                      BorderBrush="#bdc3c7"
                      GridLinesVisibility="Horizontal"
                      HorizontalGridLinesBrush="#ecf0f1"
                      CanUserAddRows="False"/>
        </DockPanel>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Left" Margin="10">
            <Button Content="⬅️ Назад в меню" Click="BtnBackToMenu_Click"
                    Background="#f39c12" Foreground="White" 
                    FontWeight="Bold" Padding="10" Margin="0,0,10,0"/>
        </StackPanel>
    </Grid>
</Window>